# =========================
# Core (required)
# =========================
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000
LOG_LEVEL=info

# Identity (dev-only)
LOCAL_USER_TOKEN=local-dev-user

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/project_memory

# Redis
REDIS_URL=redis://localhost:6379

# =========================
# Feature flags
# =========================
FEATURE_LLM=false
FEATURE_TELEGRAM=false

# =========================
# Digest behavior
# =========================
DIGEST_MAX_RECENT_EVENTS=50
DIGEST_MAX_DAYS_LOOKBACK=14
DIGEST_EVENT_BUDGET_TOTAL=40
DIGEST_EVENT_BUDGET_DOCS=10
DIGEST_EVENT_BUDGET_STREAM=30
DIGEST_NOVELTY_THRESHOLD=0.15
DIGEST_MAX_RETRIES=1
DIGEST_USE_LLM_CLASSIFIER=false
DIGEST_DEBUG=false
DIGEST_REBUILD_CHUNK_SIZE=80

# =========================
# LLM (optional; required if FEATURE_LLM=true)
# =========================
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# =========================
# Telegram adapter (required if FEATURE_TELEGRAM=true)
# =========================
TELEGRAM_BOT_TOKEN=
PUBLIC_BASE_URL=
TELEGRAM_WEBHOOK_PATH=/telegram/webhook
ADAPTER_PORT=3001
